# editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[package.json]
indent_size = 2

[app/views/*.jade]
indent_size = 2

[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.ls]
indent_size = 2
